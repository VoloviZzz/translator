<link rel="stylesheet" type="text/css" href="css/profile.css">
<div class="login">
  <div class="login-body">
    <h3 class="login-heading">Добавить новость</h3>
    <hr>
    <div class="login-form">
      <div class="form-group" id="news"></div>
      <div class="form-group">
        <ul class="list-inline">
          <label for="title">Заголовок</label>
          <input id="title" class="form-control" type="text">
        </ul>
      </div>
      <div class="form-group">
        <ul class="list-inline">
          <label for="photo">Основная фотография</label>
          <input id="uploadFiles" class="form-control" type="file" style="display:none">
          <input id="uploadFiles1" class="form-control" type="file" style="display:none">
          <div class="btn btn-primary btn-block" id="uploadFiles_BTN" onclick="$('#uploadFiles').click()">Загрузить основное фото</div>
        </ul>
      </div>
      <div class="form-group" id="news_editor">
        <ul class="list-inline">
          <label for="photo">Новость</label>
          <textarea class="news" rows="8" cols="80" placeholder="Начните писать новый абзац"></textarea>
          <div class="btn btn-primary btn-block" id="uploadFiles_BTN1" onclick="$('#uploadFiles1').click()">Загрузить фото</div>
        </ul>
      </div>
      <div class="form-group">
        <div class="btn btn-success btn-block" id="add_new_abz">Добавить абзац</div>
        <div class="btn btn-success btn-block" id="add_new_photo">Добавить фото</div>
      </div>
      <div class="form-group">
        <div class="btn btn-success btn-block" id="add_new_news">Добавить новость</div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="js/add_new_news.js"></script>
