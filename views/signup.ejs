<link rel="stylesheet" type="text/css" href="css/signup.css">
  <div class="signup">
    <div class="signup-body">
      <div class="signup-form">
        <form class="form-wizard" data-toggle="validator">
          <div class="tab-content">
            <div id="step-1" class="tab-pane active">
              <h4 class="tab-pane-heading">
                <span>Регистрация</span>
              </h4>
              <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                  <div class="form-group">
                    <label for="email" class="control-label">Email</label>
                    <input  id="email" class="form-control" type="email" placeholder="Введите ваш e-mail">
                  </div>
                  <div class="form-group">
                    <label for="surname" class="control-label">Фамилия</label>
                    <input  id="surname" class="form-control russian_word" type="text" placeholder="Введите вашу фамилию">
                    <label for="name" class="control-label">Имя</label>
                    <input  id="name" class="form-control russian_word" type="text" placeholder="Введите ваше имя">
                    <label for="second_name" class="control-label">Отчество</label>
                    <input  id="second_name" class="form-control russian_word" type="text" placeholder="Введите ваше отчество">
                  </div>
                  <div class="form-group">
                  </div>
                  <div class="form-group">
                    <label for="phone_number" class="control-label">Телефон</label>
                    <div class="input-group">
                      <input  id="phone_number" class="form-control" type="number" placeholder="Введите пароль">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="b_date" class="control-label">Дата рождения</label>
                    <div class="input-group">
                      <input  id="b_date" class="form-control" type="date" placeholder="Введите пароль">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="password" class="control-label">Пароль</label>
                    <div class="input-group">
                      <input id="password" class="form-control" type="password" placeholder="Введите пароль">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="password2" class="control-label">Повторите Пароль</label>
                    <div class="input-group">
                      <input id="password2" class="form-control" type="password2" placeholder="Введите пароль ещё раз">
                    </div>
                  </div>
                  <div class="form-group">
                    <button class="btn btn-primary btn-block btn-next" id="create_user" type="button">Создать аккаунт</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script type="text/javascript" src="js/signup.js"></script>
