<div class="messenger">
  <div id="contacts" class="messenger-sidebar active">
    <div class="messenger-sidebar-body">
      <div class="custom-scrollbar">
        <ul class="messenger-list">
          <li class="messenger-list-item">
            <a class="messenger-list-link" href="#AI" data-toggle="tab">
              <div class="messenger-list-details">
                <div class="messenger-list-name">LADA</div>
                <div class="messenger-list-message">
                  <small class="truncate">Чат с нейронной сетью по имени LADA.</small>
                </div>
              </div>
            </a>
          </li>
          <li class="messenger-list-item">
            <a class="messenger-list-link" href="#chat" data-toggle="tab">
              <div class="messenger-list-details">
                <div class="messenger-list-name">Общий</div>
                <div class="messenger-list-message">
                  <small class="truncate">Чат со всеми пользователями приложения.</small>
                </div>
              </div>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div id="AI" class="messenger-content">
    <div class="messenger-content-inner">
      <div class="messenger-content-header">
        <div class="messenger-content-header-inner">
          <div class="messenger-toolbar">
            <div class="btn-group hidden-md hidden-lg">
              <button class="btn btn-link link-muted" title="Back to Contacts" data-target="#contacts" data-toggle="tab" type="button" aria-expanded="true">
                <span class="icon icon-caret-left icon-lg icon-fw"></span>
                Contacts
              </button>
            </div>
            <div class="messenger-toolbar-tools pull-xs-right">
              <div class="btn-group">
                <div class="btn-group pull-center center text-center" style="text-align:center" data-toggle="buttons">
                  <label class="btn btn-primary">
                    <input type="radio" name="options" id="option1" autocomplete="off" checked > Rus
                  </label>
                  <label class="btn btn-primary active">
                    <input type="radio" name="options" id="option2" autocomplete="off"> Eng
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="messenger-content-body" style="background-color: #565656;">
        <div class="messenger-content-body-inner">
          <div class="messenger-scrollable-content">
            <ul class="conversation" id="conversation_ai">
              <!-- <li class="conversation-item">
                <div class="divider">
                  <div class="divider-content">Jun 18th</div>
                </div>
              </li> -->


            </ul>
          </div>
        </div>
      </div>
      <div class="messenger-content-footer">
        <div class="messenger-content-footer-inner">
          <div class="messenger-compose">
            <div class="messenger-compose-actions">
              <!-- <div class="messenger-compose-action">
                <label class="btn btn-link link-muted file-upload-btn">
                  <span class="icon icon-picture-o icon-lg"></span>
                  <input class="file-upload-input" type="file" name="messenger_compose_file">
                </label>
              </div>
              <div class="messenger-compose-action">
                <button class="btn btn-link link-muted" type="button">
                  <span class="icon icon-smile-o icon-lg"></span>
                </button>
              </div> -->
              <div class="messenger-compose-action">
                <button id="send_ai" class="btn btn-info" style="border-radius: 50%;" type="button"><span class="icon icon-send"></button>
              </div>
            </div>
            <div class="messenger-compose-message">
              <textarea id="textarea_ai" class="messenger-compose-input" name="messenger_compose_message" placeholder="Type a message..."></textarea>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="chat" class="messenger-content">
    <div class="messenger-content-inner">
      <div class="messenger-content-header">
        <div class="messenger-content-header-inner">
          <div class="messenger-toolbar">
            <div class="btn-group hidden-md hidden-lg">
              <button class="btn btn-link link-muted" title="Back to Contacts" data-target="#contacts" data-toggle="tab" type="button" aria-expanded="true">
                <span class="icon icon-caret-left icon-lg icon-fw"></span>
                Назад
              </button>
            </div>
            <div class="messenger-toolbar-tools pull-xs-right">
              <div class="btn-group">
                <div class="btn-group pull-center center text-center" style="text-align:center" data-toggle="buttons">
                  <label class="btn btn-primary">
                    <input type="radio" name="options" id="option3" autocomplete="off" checked> Rus
                  </label>
                  <label class="btn btn-primary active">
                    <input type="radio" name="options" id="option4" autocomplete="off"> Eng
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="messenger-content-body" style="background-color: #565656;">
        <div class="messenger-content-body-inner">
          <div class="messenger-scrollable-content">
            <ul class="conversation" id="conversation_ch">

            </ul>
          </div>
        </div>
      </div>
      <div class="messenger-content-footer">
        <div class="messenger-content-footer-inner">
          <div class="messenger-compose">
            <div class="messenger-compose-actions">
              <div class="messenger-compose-action">
                <button id="send_ch" class="btn btn-info" style="border-radius: 50%;" type="button"><span class="icon icon-send"></button>
              </div>
            </div>
            <div class="messenger-compose-message">
              <textarea id="textarea_ch" class="messenger-compose-input" name="messenger_compose_message" placeholder="Type a message..."></textarea>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="messenger-welcome">
    <div class="messenger-welcome-body">
      <div class="messenger-welcome-inner">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <h1 class="messenger-heading">Привет</h1>
            <h6 class="messenger-subheading">Выберите чат.</h6>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="js/chat.js"></script>
