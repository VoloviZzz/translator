<link rel="stylesheet" type="text/css" href="css/login.css">
<div class="login">
  <div class="login-body">
    <h3 class="login-heading">Sign in</h3>
    <div class="login-form">
      <form data-toggle="validator">
        <div class="form-group">
          <label for="username" class="control-label">Phone</label>
          <input id="username" class="form-control" type="number" placeholder="8(9✕✕)✕✕✕-✕✕-✕✕">
        </div>
        <div class="form-group">
          <label for="password" class="control-label">Password</label>
          <input id="password" class="form-control" type="password" placeholder="Введите пароль">
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" id="login">Войти</button>
        </div>
        <div class="form-group">
          <ul class="list-inline">
            <li><a href="/password">Забыли пароль?</a></li>
            <li>
              <span aria-hidden="true"> · </span>
            </li>
            <li><a href="/signup" >Создать аккаунт?</a></li>
          </ul>
        </div>
      </form>
    </div>
  </div>
</div>
<script type="text/javascript" src="js/login.js"></script>
